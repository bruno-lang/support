<?xml version="1.0" encoding="UTF-8"?>

<style-scheme id="bruno-classic" _name="Bruno Classic" version="1.0">
  <author>Jan Bernitt</author>
  <_description>A color theme for the bruno programming system.</_description>

  <!-- 
	- white text on black paper
	- red, green, blue, magenta, cyan, yellow
	- rare elements have strong color, common ones lean towards white
	- comments have low contrast to not distort the content
  -->

  <!-- Palette -->
  <color name="paper"      value="#000000"/>
  <color name="ink"        value="#eeeeee"/>

  <!-- Emphasis -->
  <color name="white"      value="#ffffff"/>
  <color name="black"      value="#000000"/>
  <color name="lightgray"  value="#aaaaaa"/>
  <color name="darkgray"   value="#555555"/>
  <color name="yellow"     value="#ffff55"/>
  <color name="darkcyan"   value="#008888"/>
  <color name="magenta"    value="#ff55ff"/>
  <color name="cyan"       value="#55ffff"/>
  <color name="cyangray"   value="#88aaaa"/>
  <color name="red"        value="#ff5555"/>
  <color name="blue"       value="#5555ff"/>
  <color name="green"      value="#55ff55"/>
  <color name="greengray"  value="#88ff88"/>

  <!-- Editing -->
  <style name="text"                        foreground="ink" background="paper"/>
  <style name="line-numbers"                foreground="#000000" background="#eeeeee"/>
  <style name="draw-spaces"                 foreground="#333333"/>
  <style name="current-line"                background="#222222"/>
  <style name="right-margin"                foreground="white" background="#000000"/>
  <style name="cursor"                      foreground="#80ffff" bold="true"/>
  <style name="selection"                   background="darkcyan"/>
  <style name="bracket-match"               foreground="black" background="green" bold="true"/>
  <style name="bracket-mismatch"            foreground="white" background="red" bold="true"/>
  <style name="search-match"                foreground="black" background="yellow"/>

  <!-- General -->
  <style name="def:error"                   background="red" bold="true"/>
  <style name="def:warning"                 background="yellow"/>
  <style name="def:note"                    foreground="blue" background="yellow" bold="true"/>
  <style name="def:underlined"              italic="true" underline="true"/>

  <!-- Comments -->
  <style name="def:shebang"                 foreground="blue"/>
  <style name="def:comment"                 foreground="darkgray"/>
  <style name="def:doc-comment-element"     foreground="darkgray" italic="true"/>

  <!-- Programming Languages (generic) -->
  <style name="def:preprocessor"            foreground="magenta"/>
  <style name="def:identifier"              foreground="white" bold="true"/>
  <style name="def:keyword"                 foreground="cyangray"/>
  <style name="def:operator"                foreground="yellow"/>
  <style name="def:tuple"                   foreground="magenta"/>
  <style name="def:special-constant"        foreground="blue"/>
  <style name="def:constant"                foreground="blue"/>
  <style name="def:special-char"            foreground="lightgray"/>
  <style name="def:string"                  foreground="cyan"/>
  <style name="def:number"                  foreground="cyan"/>
  <style name="def:set"                     foreground="lightgray"/>
  <style name="def:array"                   foreground="lightgray"/>
  <style name="def:statement"               foreground="red"/>
  <style name="def:type"                    foreground="green"/>
  <style name="def:variable"                foreground="greengray"/>
  <style name="def:label"                   foreground="cyangray"/>

  <!-- Language specific styles -->
  <style name="markdown:header"             foreground="yellow"/>
  <style name="markdown:horizontal-rule"    foreground="yellow"/>
  <style name="markdown:emphasis"           foreground="white" italic="true" />
  <style name="markdown:strong-emphasis"    foreground="white" bold="true"/>
  <style name="markdown:list-marker"        foreground="magenta" bold="true"/>
  <style name="markdown:blockquote-marker"  foreground="magenta"/>
  <style name="markdown:code"               foreground="cyan"/>

  <style name="diff:added-line"             foreground="green"/>
  <style name="diff:removed-line"           foreground="red"/>
  <style name="diff:changed-line"           foreground="yellow"/>
  <style name="diff:special-case"           use-style="def:constant"/>
  <style name="diff:location"               use-style="def:statement"/>
  <style name="diff:diff-file"              use-style="def:type"/>

  <style name="xml:element-name"            foreground="yellow" bold="false"/>
  <style name="xml:attribute-name"          foreground="lightgray"/>
  <style name="xml:attribute-value"         foreground="ink"/>
  <style name="xml:namespace"               foreground="green" bold="true"/>

  <style name="latex:display-math"          foreground="yellow"/>
  <style name="latex:command"               foreground="cyan" bold="true"/>
  <style name="latex:include"               use-style="def:preprocessor"/>

</style-scheme>
